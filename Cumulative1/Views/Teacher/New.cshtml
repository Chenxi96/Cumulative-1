@model Cumulative1.Models.Teacher

<h2>Add Teacher</h2>
<form id="form" asp-asp-action="Create" method="POST">
    <div>
        <label for="teacherFName">First Name:</label>
        <input id="teacherFName" type="text" asp-for="TeacherFirstName">
        <span asp-validation-for="TeacherFirstName"></span>
    </div>
    <div>
        <label for="teacherLName">Last Name:</label>
        <input id="teacherLName" type="text" asp-for="TeacherLastName">
        <span asp-validation-for="TeacherLastName"></span>
    </div>
    <div>
        <label for="employeeNumber">Employee Number:</label>
        <input id="employeeNumber" type="text" asp-for="TeacherEmployeeNumber">
        <span asp-validation-for="TeacherEmployeeNumber"></span>
    </div>
    <div>
        <label for="hireDate">Hire Date:</label>
        <input id="hireDate" type="date" name="TeacherHiredDate">
    </div>
    <div>
        <label for="phoneNumber">Work Phone:</label>
        <input type="tel" placeholder="(647)-123-4567" name="teacherWorkPhone">
    </div>
    <div>
        <label for="salary">Salary:</label>
        <input id="salary" type="number" step="0.01" asp-for="TeacherSalary">
        <span asp-validation-for="TeacherSalary"></span>
    </div>
    <input type="submit">
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}